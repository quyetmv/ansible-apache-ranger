# Keep environment variables so sudo users can sudo to hdfs user without worrying about environment variables
{{ ranger_user }} ALL=(ALL)       NOPASSWD: ALL
Defaults  env_keep += "HADOOP_HOME"
Defaults  env_keep += "HADOOP_PREFIX"
Defaults  env_keep += "HADOOP_CONF_DIR"
Defaults  env_keep += "HADOOP_LIBEXEC_DIR"
Defaults  env_keep += "HADOOP_CLASSPATH"
Defaults  env_keep += "JAVA_HOME"
Defaults  env_keep += "PATH"
Defaults  env_keep += "SPARK_HOME"
Defaults  env_keep += "LD_LIBRARY_PATH"
